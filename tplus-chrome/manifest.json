{
    "name":"TPlus Chrome Extension",
    "version":"2.0.0",
    "description":"Chrome extension of TPlus",
    "page_action":{
        "default_name":"TPlus",
        "default_icon":"image/tplus.png",
        "popup":"popup.html"
    },
    "background_page":"background.html",
    "content_scripts":[
        {
            "matches":["https://te.thoughtworks.com/?ticket=*"],
            "run_at":"document_idle",
            "all_frames":false,
            "js":["script/navigation.js" ]
        },
        {
            "matches":["https://te.thoughtworks.com/time_sheets/new"],
            "run_at":"document_idle",
            "all_frames":false,
            "css":["css/tplus.css"],
            "js":[
                "lib/jquery-1.7.1.min.js",
                "lib/underscore.js",
                "lib/antlr3-all-min.js",
                "script/date-util.js",
                "script/timesheet-records.js",
                "script/timesheet-builder.js",
                "script/holiday/public-holidays.js",
                "script/logs/log-message-parser.js",
                "script/logs/log-repository.js",
                "script/name/pinyin-lexer.js",
                "script/name/pinyin-parser.js",
                "script/name/name.js",
                "script/content-script.js" ]
        }
    ],
    "permissions":[
        "http://*/",
        "https://*/"
    ]
}